{
  "statusPolling":{
    "resourceType": "cassandradeployments.netcracker.com",
    "resourceName": "cassandra-operator",
    "statusPath": "$.status.conditions[?(@.type=='Successful')]",
    "statusPathFail": "$.status.conditions[?(@.type=='Failed')]",
    "timeout": "${ CUSTOM_TIMEOUT_MIN ? CUSTOM_TIMEOUT_MIN : '60' }",
    "delay": "${ DELAY_BEFORE_STATUS_POLL ? DELAY_BEFORE_STATUS_POLL : '15' }"
  }
}
